@model IEnumerable<OrderSystem.Models.ProProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Produkte</h1>

<p>
    <a href="@Url.Action("Create","AdminProducts")" class="btn btn-success">Hinzufügen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProPriceBuy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProPriceBuy)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
